{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "types": ["node", "jest"]
  },
  "include": ["src", "utils", "jest"]
}
